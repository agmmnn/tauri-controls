{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "tauri-controls-playground",
  "identifier": "com.tauri-controls.playground",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:4321",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Tauri Controls Playground",
        "center": true,
        "transparent": true,
        "decorations": false,
        "resizable": true,
        "width": 1200,
        "height": 800
      }
    ],
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  }
}
