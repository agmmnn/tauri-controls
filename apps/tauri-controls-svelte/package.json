    "svelte": "^5.53.5",
    "svelte-check": "^4.4.4",
    "tailwindcss": "^4.2.1",
    "taze": "^19.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
